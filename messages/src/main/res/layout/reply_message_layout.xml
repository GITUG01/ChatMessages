<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#004EAF"
    android:orientation="horizontal"
    android:paddingBottom="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/message_reply_vertical_line_card_view"
        android:layout_width="2dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:elevation="0dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="1dp"
        app:cardElevation="0dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        android:paddingEnd="8dp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/message_reply_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/gilroy_bold"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="14dp"
            tools:text="alexandra-vorzhik" />

        <TextView
            android:id="@+id/message_reply_content_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/gilroy_medium"
            android:maxLines="3"
            android:textColor="@color/white"
            android:textSize="14dp"
            tools:text="Меня зовут Саня. Музыкант" />

    </LinearLayout>

</LinearLayout>